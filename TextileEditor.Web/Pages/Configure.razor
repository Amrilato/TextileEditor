@page "/config"

<FluentStack Orientation="Orientation.Vertical">
    <FluentNumberField @bind-Value=EnvironmentConfigure.Threshold Label="Threshold" />
    <FluentNumberField @bind-Value=EnvironmentConfigure.ChunkSize Label="ChunkSize" />
    <FluentNumberField @bind-Value=ColumnWidth Label="Cell Width" />
    <FluentNumberField @bind-Value=RowHeight Label="Cell Height" />
    <FluentLabel>Border Color</FluentLabel>
    <input id="borderColorPicker" type="color" @bind="BorderColor" />
    <FluentLabel>Fill Color</FluentLabel>
    <input id="fillColorPicker" type="color" @bind="FillColor" />
    <FluentLabel>Paste Fill Color</FluentLabel>
    <input id="pasteFillColorPicker" type="color" @bind="PasteFillColor" />
    <FluentButton IconStart="@(new Icons.Regular.Size24.Save())" OnClick="SaveConfig">Save Config</FluentButton>
</FluentStack>