@page "/preview"
@using TextileEditor.Web.Components

@if (TextileEditorContext is not null && TextilePreviewContext is not null)
{
    <FluentStack Style="height: 100%" Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Left" VerticalAlignment="VerticalAlignment.Top">
        <FluentStack>
            <FluentButton IconStart="@(new Icons.Regular.Size20.ArrowReset())" OnClick="TextilePreviewContext.Rerender" />
            <FluentStack Orientation="Orientation.Vertical">
                <FluentStack>
                    <FluentSlider Label="@Localizer[SharedResource.SelectAHorizontalRepeat]" Min="1" Max="100" Step="1" @bind-Value=TextilePreviewContext.RepeatHorizontal>
