@namespace TextileEditor.Web.Layout
@using System.Globalization
@using Microsoft.Extensions.Localization
@using TextileEditor.Web.Services
@inject ILocalizer Localizer
@inject NavigationManager Navigation

<FluentButton id="ViewMenuOpen" Disabled="open" Appearance="Appearance.Stealth" @onclick="@(() => open = !open)">
    @Localizer.GetString(SharedResource.View)
</FluentButton>

<FluentMenu Anchor="ViewMenuOpen" @bind-Open="open" VerticalThreshold="170">
    <FluentMenuItem OnClick="@(() => Navigation.NavigateTo(""))">
        @Localizer.GetString(SharedResource.Home)
    </FluentMenuItem>
    <FluentMenuItem OnClick="@(() => Navigation.NavigateTo("edit"))" >
        @Localizer.GetString(SharedResource.Edit)
    </FluentMenuItem>
    <FluentMenuItem OnClick="@(() => Navigation.NavigateTo("preview"))" >
        @Localizer.GetString(SharedResource.Preview)
    </FluentMenuItem>
    <FluentMenuItem OnClick="@(() => Navigation.NavigateTo("config"))">
        @Localizer.GetString(SharedResource.Config)
    </FluentMenuItem>
</FluentMenu>

@code {
    bool open = false;
}
