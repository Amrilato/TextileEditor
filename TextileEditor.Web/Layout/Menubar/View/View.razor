@namespace TextileEditor.Web.Layout
@using System.Globalization
@using TextileEditor.Web.Services
@inject NavigationManager Navigation

<FluentButton id="ViewMenuOpen" Disabled="open" Appearance="Appearance.Stealth" @onclick="@(() => open = !open)">
    View
</FluentButton>

<FluentMenu Anchor="ViewMenuOpen" @bind-Open="open" VerticalThreshold="170">
    <FluentMenuItem OnClick="@(() => Navigation.NavigateTo(""))">
        Home
    </FluentMenuItem>
    <FluentMenuItem OnClick="@(() => Navigation.NavigateTo("edit"))" >
        Edit
    </FluentMenuItem>
    <FluentMenuItem OnClick="@(() => Navigation.NavigateTo("preview"))" >
        Preview
    </FluentMenuItem>
    <FluentMenuItem OnClick="@(() => Navigation.NavigateTo("config"))">
        Config
    </FluentMenuItem>
</FluentMenu>

@code {
    bool open = false;
}
